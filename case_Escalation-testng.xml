<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Login Suite">
  <test name="Login Test and Case Creation">
    <classes>
      <class name="org.lrtapptronik.tests.Test.ApptronikTest">
       <methods>
		 <include name="loginTest"/>
		 <include name="caseCreation"/>
        </methods>
      </class>
    </classes>
  </test>
    <test name="Case Escalation">
        <classes>
            <class name="org.lrtapptronik.tests.Test.ApptronikTest">
                <methods>
                    <include name="loginTest"/>
                    <include name="caseCreation"/>
                    <include name="caseEscalation"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Case Escalation To FieldService">
        <classes>
            <class name="org.lrtapptronik.tests.Test.ApptronikTest">
                <methods>
                    <include name="loginTest"/>
                    <include name="caseCreation"/>
                    <include name="caseEscalatedToFieldService"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>